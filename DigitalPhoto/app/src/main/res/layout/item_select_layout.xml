<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/simple_bg_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_select_tag_txt"
        android:layout_width="30dip"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/set_next_blue_icon"
        android:textColor="#3399FD"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_select_title_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="ssss"
        android:textColor="@drawable/selector_select_txt"
        android:textSize="14sp"/>

</LinearLayout>