<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="10dip"
                android:paddingLeft="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_set_image_txt"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"/>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="背景音乐"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_bjyy_play_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_image_show_ratio_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_tpxsbl_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_image_show_ratio_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_image_play_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_hdpfysj_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_image_play_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_image_play_order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_hdpbfsx_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_image_play_order_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="10dip"
                android:paddingLeft="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_set_video_txt"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"/>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_video_show_scale_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_spxsbl_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_video_show_scale_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_video_play_model_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_spbfms_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_video_play_model_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_ddbfgn_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_breakpoint_play_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"
                      android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_zimu_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_subtitle_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="10dip"
                android:paddingLeft="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_set_music_txt"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"/>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_audio_play_model_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_yybfms_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_audio_play_model_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_xspp_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_show_channel_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="10dip"
                android:paddingLeft="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日历设置"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"/>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_calendar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="日期"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_calendar_riqi_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="时间"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_calendar_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="闹钟状态"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_calendar_nzzt_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="闹钟时间"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_calendar_nz_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="闹钟频率"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_calendar_nz_frequency_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="10dip"
                android:paddingLeft="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_system_txt"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"/>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="定时开机"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_calendar_timer_open_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="开机时间"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_start_open_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="定时关机"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <com.xyz.digital.photo.app.view.SwitchButton
                        android:id="@+id/set_calendar_timer_close_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="关机时间"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_start_close_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="定时开关机频率"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_start_dskgjpl_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <View style="@style/view_line_margin"/>

                <RelativeLayout
                    android:id="@+id/set_start_play_model_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_kjbfms_txt"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/set_start_play_model_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/set_next_icon"
                        android:textColor="#A3A3A3"
                        android:textSize="13sp"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>