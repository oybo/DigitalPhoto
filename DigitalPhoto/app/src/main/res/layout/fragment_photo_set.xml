<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/set_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_actionbar_height"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:theme="@style/ToolbarTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_tab_set_txt"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_toolbar_layout"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dip"
        android:paddingLeft="20dip">

        <RelativeLayout
            android:id="@+id/set_language_layout"
            android:layout_width="match_parent"
            android:layout_height="40dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/set_language_txt"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/set_language_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/set_next_icon"
                android:textColor="#A3A3A3"
                android:textSize="13sp"/>

        </RelativeLayout>

        <View style="@style/view_line_margin"/>

        <RelativeLayout
            android:id="@+id/set_about_us_layout"
            android:layout_width="match_parent"
            android:layout_height="40dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/set_about_us_txt"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/set_next_icon"
                android:textColor="#A3A3A3"
                android:textSize="13sp"/>

        </RelativeLayout>

        <View style="@style/view_line_margin"/>

        <RelativeLayout
            android:id="@+id/set_info_layout"
            android:layout_width="match_parent"
            android:layout_height="40dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/set_app_info_txt"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/set_next_icon"
                android:text=""
                android:textColor="#A3A3A3"
                android:textSize="13sp"/>

        </RelativeLayout>

        <View style="@style/view_line_margin"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/set_version_txt"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/set_version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/set_next_icon"
                android:text="1.0"
                android:textColor="#A3A3A3"
                android:textSize="13sp"/>

        </RelativeLayout>

    </LinearLayout>

    <com.xyz.digital.photo.app.view.LoadingView
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>