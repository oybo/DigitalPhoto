<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginTop="8dip"
        android:background="#FFFFFF"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">

        <TextView
            android:id="@+id/item_wifi_device_position_txt"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_view"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_wifi_device_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/item_wifi_device_position_txt"
            android:singleLine="true"
            android:text="一号机"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_wifi_device_is_connect_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_wifi_device_name_txt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="2dip"
            android:layout_toRightOf="@id/item_wifi_device_position_txt"
            android:singleLine="true"
            android:text="已连接"
            android:textColor="#000000"
            android:textSize="12sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/item_wifi_device_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_device_status"/>

        <TextView
            android:id="@+id/item_wifi_device_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/item_wifi_device_status_txt"
            android:layout_toRightOf="@id/item_wifi_device_name_txt"
            android:text="深圳南山区科技园联想大厦"
            android:textColor="#767676"
            android:textSize="14sp"/>

    </RelativeLayout>

</LinearLayout>