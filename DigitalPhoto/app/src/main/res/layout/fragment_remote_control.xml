<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/colorPrimary" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_control_tab_power_layout"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_power" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电源"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_tab_set"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_set" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_tab_music"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_music" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="背景音乐"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_tab_mute"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_mute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="静音"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_control_menu_image"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_menu_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_menu_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_menu_music"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_menu_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_menu_music" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音乐"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_menu_video"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_menu_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_menu_video" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_menu_calendar"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_menu_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_menu_calender" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日历"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_menu_show_model"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_menu_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_menu_show_model" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示模式"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="#999999" />

            <RelativeLayout
                android:id="@+id/book_read_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/book_read_menu_menu_widget_layout"
                    android:layout_width="200dip"
                    android:layout_height="200dip"
                    android:layout_centerInParent="true">

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_back_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_control_main_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主页"
                        android:textColor="@drawable/selector_actionbar_txt"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-10dip"
                        android:background="@drawable/selector_control_magnify_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_fangda_src_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dip"
                        android:background="@drawable/selector_control_shrink_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_suoxiao_src_icon" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fragment_control_previou_nex_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="10dip">

                    <LinearLayout
                        android:id="@+id/fragment_control_previou_temp_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragment_control_previou_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_control_magnify_bg"
                            android:scaleType="center"
                            android:src="@drawable/control_fangda_src_icon" />

                        <ImageView
                            android:id="@+id/fragment_control_next_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_control_shrink_bg"
                            android:scaleType="center"
                            android:src="@drawable/control_suoxiao_src_icon" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/selector_control_tab_bg"
                        android:scaleType="center"
                        android:src="@drawable/control_tab_power" />

                    <LinearLayout
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_control_previou_temp_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="上一曲"
                            android:textColor="@drawable/selector_actionbar_txt"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="播放/暂停"
                            android:textColor="@drawable/selector_actionbar_txt"
                            android:textSize="11sp" />


                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="下一曲"
                            android:textColor="@drawable/selector_actionbar_txt"
                            android:textSize="11sp" />

                    </LinearLayout>

                </RelativeLayout>

                <com.xyz.digital.photo.app.view.VerticalSeekBar
                    android:id="@+id/book_read_menu_voice_seekbar"
                    android:layout_width="5dip"
                    android:layout_height="match_parent"
                    android:layout_above="@id/fragment_control_previou_nex_layout"
                    android:layout_below="@id/fragment_control_back_layout"
                    android:layout_marginLeft="15dip"
                    android:max="225"
                    android:maxHeight="5.0dip"
                    android:minHeight="5.0dip"
                    android:progress="100"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/thumb_selector" />

                <com.xyz.digital.photo.app.view.VerticalSeekBar
                    android:id="@+id/book_read_menu_brightness_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@id/fragment_control_previou_nex_layout"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/fragment_control_back_layout"
                    android:layout_marginRight="15dip"
                    android:max="225"
                    android:maxHeight="2.0dip"
                    android:minHeight="2.0dip"
                    android:progress="100"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/thumb_selector" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>