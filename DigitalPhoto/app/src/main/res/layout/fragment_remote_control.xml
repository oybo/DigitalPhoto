<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_actionbar_height"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_control_tab_power"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_device_selector"
            android:gravity="center"
            android:padding="5dip"
            android:text="电源"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_tab_set"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_photo_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="设置"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_tab_music"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_remote_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="背景音乐"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_tab_mute"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_set_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="静音"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_control_menu_image"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_device_selector"
            android:gravity="center"
            android:padding="5dip"
            android:text="图片"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_menu_music"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_photo_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="音乐"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_menu_video"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_remote_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="视频"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_menu_calendar"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_set_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="日历"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_menu_show_model"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_set_selector"
            android:gravity="center"
            android:padding="5dip"
            android:paddingBottom="3dip"
            android:text="显示模式"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>
    </LinearLayout>

    <View style="@style/view_line"
          android:layout_height="0.5dip"
          android:layout_marginTop="10dip"
          android:background="#999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dip">

        <TextView
            android:id="@+id/fragment_control_back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_set_selector"
            android:gravity="center"
            android:text="返回"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fragment_control_main_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/tab_set_selector"
            android:gravity="center"
            android:text="主页"
            android:textColor="@drawable/selector_actionbar_txt"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/media_pause_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/media_play_icon"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fragment_control_previou_nex_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_control_previou_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/media_pause_icon"/>

            <ImageView
                android:id="@+id/fragment_control_next_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/fragment_control_previou_bt"
                android:src="@drawable/media_play_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_control_previou_bt"
                android:text="上一曲"
                android:textColor="@drawable/selector_actionbar_txt"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_control_next_bt"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/fragment_control_previou_bt"
                android:text="下一曲"
                android:textColor="@drawable/selector_actionbar_txt"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fragment_control_previou_nex_layout"
            android:layout_below="@id/fragment_control_back_bt"
            android:padding="10dip">

            <com.xyz.digital.photo.app.view.VerticalSeekBar
                android:id="@+id/book_read_menu_voice_seekbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:max="225"
                android:maxHeight="2.0dip"
                android:minHeight="2.0dip"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/thumb_selector"/>

            <com.xyz.digital.photo.app.view.VerticalSeekBar
                android:id="@+id/book_read_menu_brightness_seekbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:max="225"
                android:maxHeight="2.0dip"
                android:minHeight="2.0dip"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/thumb_selector"/>

            <FrameLayout
                android:id="@+id/book_read_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>